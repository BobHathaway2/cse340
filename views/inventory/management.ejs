<!-- The content Heading -->

<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>


<!-- A Message Block to display potential error messages -->
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- The Management links to Display -->
<div id="management">
  <div id="addClass"><a href="/inv/addClass">Add New Classification</a></div>
  <div id="addVehicle"><a href="/inv/addVehicle">Add New Vehicle</a></div>
</div>