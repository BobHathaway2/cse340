<!-- The content Heading -->

<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>


<!-- A Message Block to display potential error messages -->
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- The edit inventory Display -->
<div id="editInventory-block1" class="outerbox">
  <div class="italics">ALL FIELDS ARE REQUIRED</div>
  <div id="editInventory-block2" class="innerbox">
    <form id="editInventoryForm" action="/inv/update" method="post">
        <label for="invClass">Classification</label>
        <%- classificationSelect %>
        <label for="invMake">Make</label>
        <input type="text" id="invMake" name="inv_make" maxlength="30" required value="<%= locals.inv_make %>">
        <label for="invModel">Model</label>
        <input type="text" id="invModel" name="inv_model" maxlength="30" required value="<%= locals.inv_model %>">
        <label for="invDescription">Description</label>
        <textarea rows="5" id="invDescription" name="inv_description" maxlength="255" required><%= locals.inv_description %></textarea>
        <label for="invImage">Image Path</label>
        <input type="text" id="invImage" name="inv_image" maxlength="50" required value="<%= locals.inv_image %>">
        <label for="invThumb">Thumbnail Path</label>
        <input type="text" id="invThumb" name="inv_thumbnail" maxlength="50" required value="<%= locals.inv_thumbnail %>">
        <label for="invPrice">Price</label>
        <input type="number" id="invPrice" name="inv_price" required min=0 max="100000000" value="<%= locals.inv_price %>">
        <label for="invYear">Year</label>
        <input type="text" id="invYear" name="inv_year" required pattern="\d{4,4}"  value="<%= locals.inv_year %>">
        <label for="invMiles">Miles</label>
        <input type="number" id="invMiles" name="inv_miles" required min="0" max="100000000" value="<%= locals.inv_miles %>">
        <label for="invColor">Color</label>
        <input type="text" id="invColor" name="inv_color" maxlength="30" required value="<%= locals.inv_color %>">
        <button form="editInventoryForm" type="submit" value="Submit">Update Vehicle</button>
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
  </div>
</div>

