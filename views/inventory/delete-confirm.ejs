<!-- The content Heading -->

<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>


<!-- A Message Block to display potential error messages -->
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- The delete inventory Display -->
<div id="deleteInventory-block1" class="outerbox">
  <div class="italics">Confirm Deletion - The delete is permanent.</div>
  <div id="deleteInventory-block2" class="innerbox">
    <form id="deleteInventoryForm" action="/inv/delete/" method="post">
        <label for="invMake">Make</label>
        <input type="text" id="invMake" name="inv_make" maxlength="30" readonly required  value="<%= locals.inv_make %>">
        <label for="invModel">Model</label>
        <input type="text" id="invModel" name="inv_model" maxlength="30" readonly required  value="<%= locals.inv_model %>">
        <label for="invPrice">Price</label>
        <input type="number" id="invPrice" name="inv_price" readonly required  min=0 max="100000000" value="<%= locals.inv_price %>">
        <label for="invYear">Year</label>
        <input type="text" id="invYear" name="inv_year" readonly required  pattern="\d{4,4}"  value="<%= locals.inv_year %>">
        <button form="deleteInventoryForm" type="submit" value="Submit">Delete</button>
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
  </div>
</div>

