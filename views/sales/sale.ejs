<!-- The content Heading -->

<% if (title) { %>
    <h1>Want to buy the <%= title %>?</h1>
    <% } else {
      res.redirect('/')
    } %>


<!-- A Message Block to display potential error messages -->
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- The buy the vehicle -->
<%- details %>
<div id="sale-block1" class="outerbox">
    <div id="sale-block2" class="innerbox">
      <form action="/sales/sale" method="post" id=saleForm>
            <p>Which of our sales representatives would you like to work with?</p>
            <%- salesreps %>
            <hr>
            <p>How would you like to complete this sale?</p>
            <input type="radio" id="online" name="sale_preference" value="online">
            <label for="online">Online - Please have the selected sales representative contact me</label><br>
            <input type="radio" id="inhouse" name="sale_preference" value="inhouse" required>
            <label for="inhouse">In your showroom - I will come into the showroom</label>
            <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">
            <input type="hidden" name="account_id" value="<%= locals.account_id %>">
            <p class="italics">(select an option)</p>
            <hr>
            <label for="phone">Please enter your phone number so we can contact you to complete the sale or schedule an appointment in the showroom.</label><br>
            <input type="tel" id="phone" name="phone" placeholder="555-555-1212" pattern="[2-9][0-9]{2}-[0-9]{3}-[0-9]{4}" value="<%= locals.phone %>" required>
            <hr>
            <div id="saleButton">
              <button id="buy" type="submit">Buy It!</button>
            </div>
    </form>
    </div>
  </div>
  