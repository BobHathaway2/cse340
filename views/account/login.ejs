<!-- The content Heading -->

<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>


<!-- A Message Block to display potential error messages -->
<%# messages() %>

<!-- The Login Form -->
<div id="login-block1">
  <div id="login-block2">
    <form>
    <label for="email">Email Address:</label><br>
    <input type="text" id="email" name="account_email"><br>
    <label for="password">Password:</label><br>
    <input type="password" class="pword" name="account_password">
    <span class="pswdBtn">Show Password</span>
    </form>
    <div id=pw-verbiage>
      <p> Passwords must be minimum of 12 characters and include 1 capital letter, 1 number, and 1 special character</p>
    </div>
    <button>Login</button>
  </div>
  <p>No account? <a href="/account/registration">Sign-up!</p>
  </div>